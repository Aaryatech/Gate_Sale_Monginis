<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCustomPendingBillItem_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:maxLines="1"
            android:fontFamily="@font/sofiapro_light"
            android:text="Black Forest Heart"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCustomPendingBillItem_Qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2.5"
            android:fontFamily="@font/sofiapro_light"
            android:gravity="end"
            android:text="QTY: 2"
            android:textColor="@color/colorBlack" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCustomPendingBillItem_UnitPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:fontFamily="@font/sofiapro_light"
            android:text="Unit Price: Rs. 350"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tvCustomPendingBillItem_SubTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/sofiapro_light"
            android:gravity="end"
            android:maxLines="2"
            android:text="Sub Total: Rs. 700"
            android:textColor="@color/colorBlack" />


    </LinearLayout>

</LinearLayout>