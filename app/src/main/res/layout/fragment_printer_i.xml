<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ats.gate_sale_monginis.fragment.PrinterIPFragment">

    <EditText
        android:id="@+id/edPrinterIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@android:drawable/editbox_background_normal"
        android:digits="0123456789."
        android:fontFamily="@font/sofiapro_light"
        android:gravity="center"
        android:hint="Printer IP"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="13dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@android:drawable/editbox_background_normal"
        android:digits="0123456789"
        android:maxLength="4"
        android:text="9100"
        android:fontFamily="@font/sofiapro_light"
        android:gravity="center"
        android:hint="Port"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="13dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnPrinterSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fontFamily="@font/sofiapro_bold"
        android:text="Save"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnPrinterTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/colorAccent"
        android:fontFamily="@font/sofiapro_bold"
        android:text="  Test Print  "
        android:textColor="@color/colorWhite" />

</LinearLayout>
